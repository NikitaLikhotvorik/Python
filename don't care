x = 0
def setup():
    size(600,600)
def draw():
    global y
    global x
    translate(300,300)
    background(0)
    circle(x,y,30)
    if keyPressed:
        if keyCode == UP:
           y+=1
        if keyCode == LEFT:
           x-=1
        if keyCode == RIGHT:
           x+=1
    else:
        y-=1
